---
import Layout from '../layouts/Layout.astro';
import DashboardView from '../components/DashboardView.vue';
---

<Layout title="Porter Management Dashboard">
  <div class="dashboard-header">
    <h1>Porter Management Dashboard</h1>
    <p class="text-muted">Real-time staffing overview across all buildings and departments</p>
  </div>

  <DashboardView client:load />
</Layout>

<style>
  .dashboard-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e9ecef;
  }

  .dashboard-header h1 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }
</style>
